<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
		<title>Hello MUI</title>
		<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
		<!--标准mui.css-->
		<link rel="stylesheet" href="../../css/mui.min.css">
			<link rel="stylesheet" href="../../css/app.css">
		<style>
			.ui-page-login,
			body {
				width: 100%;
				height: 100%;
				margin: 0px;
				padding: 0px;
			}
			
			.mui-content {
				height: 100%;
			}
			
			.area {
				margin: 20px auto 0px auto;
			}
			
			.mui-input-group {
				margin: 10px;
				border-radius: 8px;
			}
			
			.mui-input-group:first-child {
				margin-top: 40px;
			}
			
			.mui-input-group label {
				width: 22%;
			}
			
			.mui-input-row label~input,
			.mui-input-row label~select,
			.mui-input-row label~textarea {
				width: 78%;
			}
			
			.mui-checkbox input[type=checkbox],
			.mui-radio input[type=radio] {
				top: 6px;
			}
			
			.mui-content-padded {
				margin-top: 25px;
			}
			
			.mui-btn {
				padding: 10px;
			}
			
			.link-area {
				display: block;
				margin-top: 25px;
				text-align: center;
			}
			
			.spliter {
				color: #bbb;
				padding: 0px 8px;
			}
		</style>
	</head>

	<body>
		<header class="mui-bar mui-bar-nav">
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
			<h1 id="title" class="mui-title">专家咨询</h1>
		</header>

		<div style="bottom: 0; position: fixed;padding-bottom: 5px;margin-bottom: 0px; left:10px;right:10px;margin-left:auto;margin-right:auto; background: #F7F7F7;">
			<button id="btn_publish" class="mui-btn" style="border-radius: 0; width: 100%" type="button">我要咨询</button>
		</div>
	</body>
	<script src="../../js/mui.min.js"></script>
	<script src="../../js/mui.enterfocus.js"></script>
	<script src="../../js/app.js"></script>
	<script>
		mui.plusReady(function() {
			//启用双击监听
			mui.init({
				gestureConfig: {
					doubletap: true
				},
				subpages: [{
					url: 'index_sub.html',
					id: 'index_consult_sub.html',
					styles: {
						top: '45px',
						bottom: '51px',
					},
					extras: {
						
					}
				}]
			});
			var contentWebview = null;
			document.querySelector('header').addEventListener('doubletap', function() {
				if (contentWebview == null) {
					contentWebview = plus.webview.currentWebview().children()[0];
				}
				contentWebview.evalJS("mui('#pullrefresh').pullRefresh().scrollTo(0,0,100)");
			});
			mui.plusReady(function() {
				document.getElementById("btn_publish").addEventListener("tap", function() {
					var student = JSON.parse(localStorage.getItem('student') || '{}');
					if (student.studentId) {
						mui.openWindow({
							url: "publish.html",
							id: "publish",
							styles: {
								top: 0,
								bottom: 0
							},
							extras: {},
							createNew: true,
							show: {
								autoShow: true,
								duration: 500
							},
							waiting: {
								autoShow: true,
								title: '正在加载...'
							}
						});
					} else { 
						mui.openWindow({
							url: '../../login.html',
							id: 'login',
							createNew: true,
							show: {
								aniShow: 'pop-in'
							},
							extras: {
								closeLogin:1
							},
							styles: {
								popGesture: 'hide'
							},
							waiting: {
								autoShow: true
							}
						});
					}
				});
			});
		});
	</script>

</html>